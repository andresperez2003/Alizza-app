
@model List<Documento.Models.ViewModels.ListUsuarioCorrespondencia>
@{
    ViewBag.Title = "Registro de Usuarios y Correspondencia";
}

<br />
<br />
<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px">
    <a href="~/UsuarioCorrespondencia/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>ID</th>
                <th>Nombre de la Razon Social</th>
                <th>Direccion</th>
                <th>ID Ciudad</th>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.ID</td>
                    <td>@oElemento.NombreRazonSocial</td>
                    <td>@oElemento.Direccion</td>
                    <td>@oElemento.IDCiudad</td>
                    <td>
                        <a class="btn btn-default" href="~/UsuarioCorrespondencia/Editar?id=@oElemento.ID">Editar</a>
                        <a class="btn btn-danger" href="~/UsuarioCorrespondencia/Eliminar?id=@oElemento.ID">Eliminar</a>
                    </td>
                </tr>
            }


        </table>

    </div>
</div>

