

@model List<Documento.Models.ViewModels.ListDependencia>
@{
    ViewBag.Title = " Dependencia  ";
}

<br />
<br />
<h2>@ViewBag.Title</h2>

<div class="row" style="text-align:right;padding:5px">
    <a href="~/Dependencia/Nuevo" class="btn btn-primary">Nuevo</a>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>ID Dependencia</th>
                <th>Dependencia</th>
                <th>Nivel</th>

                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.IDDependencia</td>
                    <td>@oElemento.Dependencia</td>
                    <td>@oElemento.Nivel</td>
                    <td>
                        <a class="btn btn-default" href="~/Dependencia/Editar?idDependencia=@oElemento.IDDependencia">Editar</a>
                        <a class="btn btn-danger" href="~/Dependencia/Eliminar?idDependencia=@oElemento.IDDependencia">Eliminar</a>
                    </td>
                </tr>
            }


        </table>

    </div>
</div>
