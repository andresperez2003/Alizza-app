@model List<Documento.Models.ViewModels.ListTablaViewModel>
@{
    ViewBag.Title = "Documentos";
}

<h2>@ViewBag.Title</h2>
<div class="row" style="text-align:right;">
    <a href="~/List/Nuevo" class="btn btn-primary" style="background:#222; border:#222; padding:6px; ">Nuevo</a>

</div>
<div class="row">
    <div class="col-md-12">

        <table class="table">
            <tr>
                <td>Radicado</td>
                <td>Categoria</td>
                <td>Tipo</td>
                <th></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.Radicado</td>
                    <td>@oElemento.Categoria</td>
                    <td>@oElemento.Tipo</td>
                    <td>
                        <a class="btn btn-default" href="~/List/Editar?radicado=@oElemento.Radicado">Editar</a>
                        <a class="btn btn-default" href="~/List/Eliminar?radicado=@oElemento.Radicado">Eliminar</a>

                    </td>
                </tr>
            }
        </table>
        <hr />
        <div style="text-align:right;">
            <a class="btn btn-default" href="~/DocSalida/Index">Documento Salida</a>
            <a class="btn btn-default" href="~/DocEntrada/Index">Documento Entrada</a>
        </div>
    </div>



</div>